// Mutual recursion

lenEven(l) :: [a] -> Bool {
  if (isEmpty(l)) {
    return True;
  } else {
    return lenOdd(l.tl);
  }
}

lenOdd(l) :: [a] -> Bool {
  if (isEmpty(l)) {
    return False;
  } else {
    return lenEven(l.tl);
  }
}

main() {
  var l1 = (1,False):(2,True):(3,False):[];
  var l2 = 1:2:3:4:5:6:[];

  // Should print `FTTF`
  printLn(lenEven(l1));
  printLn(lenOdd(l1));
  printLn(lenEven(l2));
  printLn(lenOdd(l2));
}
