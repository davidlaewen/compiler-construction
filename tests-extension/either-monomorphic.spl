// Monomorphic `Either` type

data Colour {
  Red(), Green(), Blue()
}

data EitherCharColour {
  Left(char : Char),
  Right(col : Colour)
}

constTrue() :: -> Bool {
  return True;
}

returnEither(col,char) :: Colour Char -> EitherCharColour {
  var left = Left(char);
  var right = Right(col);
  if (constTrue()) {
    return left;
  } else {
    return right;
  }
}

main() :: -> Void {
  var e = returnEither(Red(),'R');
  var c = e.char;
  print(c);
  return;
}
